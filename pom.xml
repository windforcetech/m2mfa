    <repositories>
        <repository>
            <id>m2micro-nexus</id>
            <name>Nexus Release Repository</name>
            <url>http://maven.m2micro.com:8081/repository/maven-public/</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>
                    always
