    <modelVersion>4.0.0</modelVersion>

    <groupId>com.m2micro</groupId>
    <artifactId>m2mfa</artifactId>
    <version>${project.release.version}</version>
    <packaging>jar</packaging>

    <name>M2MFA</name>
    <description>M2Micro 物联微电子有限公司工厂应用</description>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.0.5.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <properties>
        <project.base.version>2.3.1</project.base.version>
        <project.release.version>${project.base.version}-SNAPSHOT</project.release.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <project.build.locales>zh_CN</project.build.locales>
        <java.version>1.8</java.version>
        <project.build.jdk>${java.version}</project.build.jdk>
        <docker.image.prefix>m2micro</docker.image.prefix>
        <m2micro.framework.version>1.1.0-SNAPSHOT</m2micro.framework.version>
        <joda>2.10</joda>
        <mybatis.plus>3.0.1</mybatis.plus>
        <flowable.version>6.4.0</flowable.version>
        <druid.version>1.1.10</druid.version>
        <easypoi.version>4.0.0</easypoi.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.m2micro</groupId>
                <artifactId>m2micro-framework</artifactId>
                <version>${m2micro.framework.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <project.release.version>${project.base.version}-SNAPSHOT</project.release.version>
            </properties>
        </profile>
        <profile>
            <id>product</id>
            <properties>
                <project.release.version>${project.base.version}</project.release.version>
            </properties>
        </profile>
    </profiles>


